 int lerArquivo (char nome)
{
  FILE *arquivo;
  char l;

  arquivo = fopen("nome.txt", "r");

  if (arquivo == NULL)
    {
    printf("O arquivo n√£o foi aberto!\n");
    }
    else
   {
     printf("O arquivo foi aberto!");
   }
  do
    {
    l = getc(arquivo);
    printf("%c" , l);    
    
    }while (l != EOF);
  fclose(arquivo);
  
  system("pause");
  return(0);
}


int main (){
    char arq;
    int c = lerArquivo(arq);
    
    return 0;
}
