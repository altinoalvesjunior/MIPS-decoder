 char abrirArquivo (char name)
{
  FILE *arquivo;
  char l;
  char nome;
  char c;

  arquivo = fopen("name.txt", "r");

  if (arquivo == NULL)
    {
    printf("O arquivo não existe. Um novo arquivo será criado!\n");
    printf ("Digite o nome do arquivo:\n");
    scanf ("%c", &nome);
    arquivo = fopen("nome.txt", "w");
    c = nome.txt;
    }
    else
   {
     printf("O arquivo foi aberto!");
     c = name.txt;
   }
   return c;
  }
  
  
  int lerArquivo(){
  char name;
  printf ("Digite o nome do arquivo a ser aberto + .txt. Caso nao existe, aperte enter.\n");
  scanf ("%c", &name);
  
  do
    {
    l = getc(abrirArquivo(name));
    printf("%c" , l);    
    
    }while (l != EOF);
  fclose(arquivo);
  
  system("pause");
  return(0);
}


int main (){

    lerArquivo();
    
    return 0;
}
